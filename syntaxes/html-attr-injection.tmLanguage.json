{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.hyperscript-html-underscore-attr.injection",
  "injectionSelector": "L:text.html, L:text.html.django, L:django-html",
  "name": "meta.embedded.line._hyperscript",
  "patterns": [
    {
      "begin": "(?x) (?<=\\b(_|script|data-x-data-script)\\s*=\\s*)([\\\"'])",
      "end": "\\2",
      "name": "meta.embedded.line._hyperscript",
      "patterns": [
        {
          "include": "source._hyperscript"
        }
      ]
    }
  ]
}
